<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:id="@+id/item_root"
    >
    <TextView android:id="@+id/item_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#ccc"
        android:padding="5dip"
        android:textSize="18sp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="5dip"
        />

    <TextView android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="16sp"
        android:layout_toRightOf="@id/item_position"
        />
    <TextView android:id="@+id/item_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_name"
        android:textColor="#333"
        android:textSize="16sp"
        />
    <TextView android:id="@+id/item_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:textColor="#999"
        android:layout_toRightOf="@id/item_position"
        />
    <ImageView android:id="@+id/item_map"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#0f0"
        android:layout_marginLeft="10dip"
        android:visibility="gone"
        />
    <ImageView android:id="@+id/share_bingli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/item_handle"
        android:padding="10dip"
        />



</RelativeLayout>