<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.firstaid.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_view"
        />
    <RelativeLayout android:id="@+id/my_touxiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:background="#fff"
        >
        <ImageView android:id="@id/right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/my_icon_right"
            />
        <com.firstaid.view.CircleNetworkImageView
            android:id="@+id/item_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@mipmap/my_tou"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/right_icon"
            android:layout_marginRight="5dip"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="头像"
            />
    </RelativeLayout>

    <RelativeLayout android:id="@+id/my_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="1dip"
        android:background="#fff"
        >
        <ImageView android:id="@id/right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/my_icon_right"
            />
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/my_tou"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/right_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="姓名"
            />
    </RelativeLayout>
    <RelativeLayout android:id="@+id/my_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_marginTop="1dip"
        android:layout_marginBottom="5dip"
        android:background="#fff"
        >
        <ImageView android:id="@id/right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/my_icon_right"
            />
        <TextView
            android:id="@+id/item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/my_tou"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/right_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号"
            />
    </RelativeLayout>

    <RelativeLayout android:id="@+id/my_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_marginTop="1dip"
        android:layout_marginBottom="5dip"
        android:background="#fff"
        >
        <ImageView android:id="@id/right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/my_icon_right"
            />
        <TextView
            android:id="@+id/item_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/my_tou"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/right_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="年龄"
            />
    </RelativeLayout>

    <RelativeLayout android:id="@+id/my_medicalHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_marginTop="1dip"
        android:layout_marginBottom="5dip"
        android:background="#fff"
        >
        <ImageView android:id="@id/right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/my_icon_right"
            />
        <TextView
            android:id="@+id/item_medicalHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/my_tou"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/right_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="重大病例"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="#3BCF67"
        android:text="确定修改"
        android:textColor="#ffffff"
        android:textSize="20sp" />
</LinearLayout>
