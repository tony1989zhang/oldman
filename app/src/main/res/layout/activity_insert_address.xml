<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.firstaid.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_view"
        />

    <RelativeLayout android:id="@+id/my_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="1dip"
        android:background="#fff"
        >
        <ImageView android:id="@+id/right_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/my_icon_right"
            />
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/my_tou"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/right_icon1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="姓名"
            />
    </RelativeLayout>
    <RelativeLayout android:id="@+id/my_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="1dip"
        android:background="#fff"
        >
        <ImageView android:id="@+id/right_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/my_icon_right"
            />
        <TextView android:id="@+id/addr_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="地址"
            android:layout_marginRight="5dip"
            />
        <TextView
            android:id="@+id/item_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/my_tou"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/right_icon2"
            android:layout_toRightOf="@id/addr_title"
            />


    </RelativeLayout>
    <RelativeLayout android:id="@+id/my_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_marginTop="1dip"
        android:layout_marginBottom="5dip"
        android:background="#fff"
        >
        <ImageView android:id="@+id/right_icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/my_icon_right"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/my_tou"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/right_icon3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号"
            />
    </RelativeLayout>
    <RelativeLayout android:id="@+id/my_youbian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_marginTop="1dip"
        android:layout_marginBottom="5dip"
        android:background="#fff"
        >
        <ImageView android:id="@+id/right_icon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/my_icon_right"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/item_youbian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/my_tou"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/right_icon4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="邮编"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="#3BCF67"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="20sp" />
</LinearLayout>
