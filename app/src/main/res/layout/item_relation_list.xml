<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:id="@+id/item_root"
    >
    <TextView android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="16sp"
        android:text="名称"
        />
    <TextView android:id="@+id/item_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_name"
        android:textColor="#333"
        android:textSize="16sp"
        android:text="关系人"
        />
    <TextView android:id="@+id/item_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:textColor="#999"
        android:text="15859254561"
        />
    <ImageView android:id="@+id/item_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon_share_phone"

        android:layout_toLeftOf="@+id/share_bingli"
        android:layout_centerVertical="true"
     />
    <ImageView android:id="@+id/share_bingli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_share_address"
        />



</RelativeLayout>