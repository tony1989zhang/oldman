<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:id="@+id/item_root"
    >
    <ImageView android:id="@+id/item_icon"
        android:layout_width="50dip"
        android:layout_height="50dip" />
    <TextView android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="16sp"
        android:layout_toRightOf="@id/item_icon"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        />
    <TextView android:id="@+id/item_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#999"
        android:textSize="14sp"
        android:layout_below="@id/item_name"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/item_icon"
        />
    <TextView android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#999"
        android:layout_margin="5dip"
        android:visibility="gone"
        android:layout_below="@id/item_icon"
        />
    <TextView android:id="@+id/item_bank_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999"
        android:textSize="16sp"
        android:layout_below="@id/item_divider"
        android:layout_marginLeft="5dip"
        android:visibility="gone"
        />

</RelativeLayout>