<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fks_iv_touxiang"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/yonghu" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/fks_iv_touxiang"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/fks_iv_touxiang"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘晗（儿子）"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="电话：15884840326"
            android:textColor="#757575"
            android:textSize="15sp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/fks_iv_touxiang"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/fks_iv_touxiang"
        android:background="#FF9900">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fks_iv_icon_phone"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/icon_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话呼叫"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>