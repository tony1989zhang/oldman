<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:paddingTop="20dip"
    android:paddingBottom="20dip"
    android:id="@+id/item_root"
    >
    <ImageView android:id="@+id/right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/you"
        android:padding="3dip"
        />
    <TextView android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/title_bg_color"
        android:textSize="16sp"
        android:layout_marginBottom="5dip"
        />
    <TextView android:id="@+id/item_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_name"
        android:layout_toLeftOf="@id/right_icon"
        android:textColor="#333"
        android:textSize="16sp"
        android:gravity="right"
        />
    <TextView android:id="@+id/item_youbian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:layout_toLeftOf="@id/right_icon"
        android:textColor="#999"
        android:text="12121212"
        />
    <TextView android:id="@+id/item_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:layout_toLeftOf="@id/item_youbian"
        android:textColor="#999"
        />





</RelativeLayout>