<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
     <item>
        <shape android:shape="oval" >
                
            <size
                android:height="250dp"
                android:width="250dp" />
            <gradient 
                android:type="linear"
                android:angle="90"
                android:startColor="#54f963"
                android:centerColor="#00acdd"
                android:endColor="#ff47e8"
                />
        </shape>
    </item> 
       <item
       android:left="23dp"
       android:top="23dp"
       android:right="23dp"
       android:bottom="23dp"
       >
        
        <shape android:shape="oval"
             >
            <solid android:color="#30c7ff" />
            <stroke
                android:width="6dp"
                android:color="@android:color/white" />
            <size
                android:height="40dp"
                android:width="40dp" />
             </shape>
    </item>   
        <item
        android:bottom="40dp"
        android:left="20dp"
        android:right="20dp">
        <bitmap
            android:gravity="center_horizontal"
            android:src="@drawable/safety_bell" />
    </item>

</layer-list>
